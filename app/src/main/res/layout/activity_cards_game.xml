<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_gravity="center"
    tools:context=".CardsGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:background="@drawable/ImageOfTopGame" >
        <TextView
            android:id="@+id/playerNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri"
            android:text="Player1"/>

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/el_messiri"
            android:textStyle="bold"
            android:text="PlayerScore = 0"/>

        <TextView
            android:id="@+id/timerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/el_messiri"
            android:text="1:00"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TableRow>

            <Button
                android:id="@+id/startBtn"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إبدأ"
                android:fontFamily="@font/el_messiri"

                android:textSize="22dp"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التالي"
                android:fontFamily="@font/el_messiri"

                android:textSize="22dp"/>

            <Button
                android:id="@+id/endBtn"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/el_messiri"

                android:text="إنهاء اللعب"
                android:textSize="22dp"/>
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/marketingPhraseTV"
        android:layout_width="wrap_content"

        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:background="@drawable/main_background"
        android:fontFamily="@font/el_messiri"
        android:gravity="center"
        android:text="العبارة التسويقية"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />


        <!-- Brand Cards Section -->
        <TableLayout
            android:layout_margin="5dp"
            android:id="@+id/brandsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand13"
                    android:background="@drawable/image (2).png"
                    android:text="brand13"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand12"
                    android:text="brand12"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand11"
                    android:text="brand11"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand23"
                    android:text="brand23"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand22"
                    android:text="brand22"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand21"
                    android:text="brand21"/>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand33"
                    android:text="brand33"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand32"
                    android:text="brand32"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand31"
                    android:text="brand31"/>
            </TableRow>

        </TableLayout>
</LinearLayout>