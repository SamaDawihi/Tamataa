<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CardsGame">

    <Button
        android:id="@+id/nextBtn"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التالي"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/marketingPhraseTV"
        android:layout_margin="20dp"

        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="العبارة التسويقية"
        android:textSize="50dp"/>


        <!-- Brand Cards Section -->
        <TableLayout
            android:layout_margin="5dp"
            android:id="@+id/brandsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand13"
                    android:text="brand13"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand12"
                    android:text="brand12"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand11"
                    android:text="brand11"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand23"
                    android:text="brand23"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand22"
                    android:text="brand22"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand21"
                    android:text="brand21"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand33"
                    android:text="brand33"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand32"
                    android:text="brand32"/>
                <Button
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brand31"
                    android:text="brand31"/>
            </TableRow>

        </TableLayout>
        <!-- playersSection -->
    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/playersSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/playerNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Player1"/>

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="PlayerScore = 0"/>



    </LinearLayout>

</LinearLayout>